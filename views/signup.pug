extends layout.pug
block content
    p Signup
    br
    form(method='post', action='/login/signup', onsubmit="return confirmPass()")
        input(type='text', name='username', placeholder='Username')
        br
        input(type='password', name='password', placeholder='Password')#pass1
        br
        input(type='password', placeholder='Confirm password')#pass2
        br
        input(type='submit', value='Submit')
    a(href="/login") Login
block javascript
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    script.
        var confirmPass = ()=>{
            if($("#pass1").val() == $("#pass2").val()) {
                return true;
            } else {
                return false;
            }
        };