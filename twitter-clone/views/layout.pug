doctype html
head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title}
    link(rel="stylesheet", href="/twitter-clone/style/main.css")
body
    .nav
        a(href="https://gthub.us/") gthub.us
        a(href="https://gthub.us/twitter-clone") Twitter Clone
        case loggedin
            when true
                a(href='/twitter-clone/dashboard') Dashboard
                .align-right
                    a(href='/twitter-clone/logout') Logout
            default
                .align-right
                    a(href='/twitter-clone/login') Login
                    a(href="/twitter-clone/signup") Signup
    .spacer
    .content
        block content
    .javascript
        block javascript